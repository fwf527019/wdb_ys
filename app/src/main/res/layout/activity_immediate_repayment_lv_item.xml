<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/selecte"
           android:src="@drawable/item_not_sec"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/repayment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="还款金额"
                android:textColor="#777777"
                android:textSize="@dimen/sixteen" />

            <TextView
                android:id="@+id/number_of_periods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="期数"
                android:textColor="@color/base_top"
                android:textSize="@dimen/sixteen" />


        </RelativeLayout>

        <TextView
            android:id="@+id/principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="本金"
            android:textColor="#777777"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="利息"
            android:textColor="#777777"
            android:textSize="@dimen/sixteen" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/liquidated_damages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="违约金"
                android:textColor="#777777"
                android:textSize="@dimen/sixteen" />

            <TextView
                android:id="@+id/late_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="逾期天数"
                android:textColor="@color/base_top"
                android:textSize="@dimen/sixteen" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
