<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <include layout="@layout/top_no_right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/activity_my_projuect_menu"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:id="@+id/online_recharge"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="线上充值"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/base_top" />


        <TextView
            android:id="@+id/line_recharge"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="线下充值"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen" />
    </LinearLayout>

    <EditText
        android:id="@+id/amount_of_money"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/activity_my_project_menu_bg"
        android:gravity="center_vertical"
        android:hint="请输入充值金额"
        android:inputType="number|numberDecimal"
        android:paddingLeft="20dp"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/fourteen" />

    <LinearLayout
        android:id="@+id/line_recharge_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/the_receipt_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/activity_my_project_menu_bg"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="请输入转账回执单号"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="回执单照片"
            android:textSize="@dimen/fourteen" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:background="@color/base_top" />

            <TextView
                android:id="@+id/prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="上传回执单照片"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/activity_register_rounded_button"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="@dimen/sixteen" />

</LinearLayout>