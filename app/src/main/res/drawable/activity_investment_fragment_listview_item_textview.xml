<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#fb6006" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#ffffff"
                android:startColor="#ffffff"
                android:type="linear" />

            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>